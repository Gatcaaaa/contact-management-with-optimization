generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Contact {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  phone      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("contacts")
}

model Report {
  id         Int      @id @default(autoincrement())
  title      String 
  status     String
  file_data  String?  @db.LongText
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("reports")
}
